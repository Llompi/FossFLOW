# FossFLOW Docker Environment Configuration

# Application Settings
NODE_ENV=production
FOSSFLOW_PORT=3000
DOMAIN=localhost
ENABLE_HTTPS=false
ENABLE_2FA=true
MONITORING_ENABLED=true
LOG_LEVEL=info

# Security
JWT_SECRET=change_this_jwt_secret_in_production_minimum_32_characters
SESSION_SECRET=change_this_session_secret_in_production_minimum_32_characters

# Database Configuration
POSTGRES_DB=fossflow
POSTGRES_USER=fossflow
POSTGRES_PASSWORD=fossflow_secure_pass_change_in_production
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PASSWORD=redis_secure_pass_change_in_production

# Nginx Configuration
HTTP_PORT=80
HTTPS_PORT=443

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_ADMIN_PASSWORD=admin_secure_pass_change_in_production

# Email Configuration (Optional)
SMTP_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# SSL/TLS Configuration
SSL_CERT_PATH=/app/certs/server.crt
SSL_KEY_PATH=/app/certs/server.key

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,svg,pdf

# Logging
LOG_TO_FILE=true
LOG_ROTATION=daily
LOG_MAX_SIZE=100m
LOG_MAX_FILES=30

# Development (set to false in production)
DEBUG=false
ENABLE_CORS=true
CORS_ORIGIN=*